<style>
  .qv-content{text-align:left}.rtl .qv-content{text-align:right}
  @media (min-width:991px){  #qe-product-images{margin:0;min-height: 652px;}}
  #jsQuickedit .option-selection{margin-bottom:10px}#jsQuickedit select.option{width: calc(100% - 120px);}#jsQuickedit span.option{min-width:120px;display:inline-block;text-transform:capitalize}#jsQuickedit .slick-dots{bottom:20px}#jsQuickedit .slick-dots li button:before{font-size:35px;color:#000;transition:all ease .3s}#jsQuickedit .qv-product-price{display:inline-block;margin:0}#jsQuickedit .qv-product-price .money{color:{{settings.color_primary}}}#jsQuickedit .qe-add-button{display: inline-block; float: left; margin-left: 20px; width: calc(100% - 120px);}#jsQuickedit .qv-product-description{max-height:180px;overflow:hidden;position:relative;}#jsQuickedit .qv-product-description:after{position:absolute;content:"";width:100%;left:0;bottom:0;background:#fff}.rtl #jsQuickedit .qv-product-description:after{right:0;left:auto}.qv-add-to-cart .quantity{height:40px;display:inline-block;width:100px;float:left}.qv-add-to-cart .quantity span{display:none}.qv-quantity{height:50px;width:100%;text-align:center;font-weight:bold;}.qv-product-options{margin-bottom:20px;}
  #qe-product-images .slick-prev{left: 20px;}#qe-product-images .slick-next{right: 20px;}
  #qe-product-images .slick-prev,#qe-product-images .slick-next{opacity: 0;transition: all 0.3s ease;}
  #qe-product-images:hover .slick-next{opacity: 1;}
  #qe-product-images:hover .slick-prev{opacity: 1;}
  .list-product-options select{display:none;}
  .list-product-options label{cursor: pointer;}
  .list-product-options label.active{border-color:var(--g-main);}
  .list-product-options label.have-background{text-indent: -9999px;}
</style>
<!-- quickedit.liquid -->
<div class="modal fade bd-example-modal-lg" id="jsQuickedit" role="dialog" aria-hidden="true" data-type="{{ settings.select_product_option_display }}">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header p-0">
        <button type="button" class="close" data-dismiss="modal">{%- include 'icon-close' -%}</button>
      </div>
      <div class="modal-body p-4">
        <div class="row m-0">
          <div class="col-lg-7 p-0">
            <div id="qe-product-images" class="qv-product-images"></div>
          </div>
          <div class="qv-content col-lg-5 d-flex flex-column align-items-center align-self-center">
            <div class="holder h-100 py-4 pl-4 pr-1">
              <h3 class="qv-product-title py-3"></h3>
              <h5 class="qv-product-price"></h5>
              <s class="qv-product-compare-price ml-2"></s>
              {%-if settings.qv_des -%}
              <div class="qv-product-description my-3"></div>
              {%- endif -%}
              <h4 class="qv-product-type hide"></h4>
              <div class="qv-add-to-cart clearfix pt-3 pb-4">
                {%- if settings.select_product_option_display == 'list' -%}
                	<div class="qv-product-options list-product-options"></div>
                {%- else -%}
                	<div class="qv-product-options"></div>
                {%- endif -%}
                <div class="quantity">
                  <span>{{'products.product.quantity' | t }}</span>
                  <input type="number" class="qv-quantity" value="1" min="1">
                </div> 
                {% comment %} <div class="cart__cell--quantity">
                  <label for="Updates_{{ item.key }}" class="cart__quantity-label medium-up--hide">{{ 'cart.label.quantity' | t }}</label>
                  <input type="number" name="updates[]" id="Updates_{{ item.key }}" class="cart__quantity" value="{{ item.quantity }}" min="0" data-line="{{ forloop.index }}" aria-label="{{ 'cart.label.quantity' | t }}">
                </div> {% endcomment %}
                <button type="submit" class="btn btn-theme gradient-theme qe-add-button">Update Cart</button>
              </div>
              {%- include 'free-shipping' -%}
              <div class="pt-4">
              {%-if settings.qv_sku -%}
              <div class="pt-1 text-uppercase qv-sku"><small class="text-body d-inline-block" style="min-width: 80px;">{{'general.quickview.sku' | t }}: </small><small class="qv-view-sku text-uppercase"></small></div>
              {%- endif -%}
              {%-if settings.qv_type -%}
              <div class="pt-1 text-uppercase"><small class="text-body d-inline-block" style="min-width: 80px;">{{'general.quickview.type' | t }}: </small><small class="qv-view-type text-uppercase"></small></div>
              {%- endif -%}
              {%-if settings.qv_vendor -%}
              <div class="pt-1 text-uppercase"><small class="text-body d-inline-block" style="min-width: 80px;">{{'general.quickview.vendor' | t }}: </small><small class="qv-view-vendor text-uppercase"></small></div>
              {%- endif -%} 
            </div>
            
              <div class="pt-4">
                <a class="qv-view-product small" href="">
                  {{'general.quickview.view_full' | t }}
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>