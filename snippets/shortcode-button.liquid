{% capture type %}{% render 'shortcode-render' render:'type' default:'default' %}{% endcapture %}
{% capture text %}{% render 'shortcode-render' render:'text' default:'' %}{% endcapture %}
{% capture url %}{% render 'shortcode-render' render:'url' default:'' %}{% endcapture %}
{% capture isOpen %}{% render 'shortcode-render' render:'isOpen' default:'' %}{% endcapture %}
{% capture isBlock %}{% render 'shortcode-render' render:'isBlock' default:'' %}{% endcapture %}
{% capture size %}{% render 'shortcode-render' render:'size' default:'' %}{% endcapture %}

{% if text != '' %}
{% if url != '' %}
<a href="{{url}}" {% if isOpen != '' %}target="_blank"{% endif %}>
  {% endif %}
  {% assign type = type | downcase %}
  <button type="button" class="btn-{{type}} btn {% if isBlock != '' %}btn-block{% endif %} {% if size != '' %}btn-{{ size | downcase }}{% endif %}">{{text}}</button>
  {% endif %}
  {% if url != '' %}
</a>
{% endif %}