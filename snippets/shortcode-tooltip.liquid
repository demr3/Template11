{% capture type %}{% render 'shortcode-render' render:'type' default:'button' %}{% endcapture %}
{% capture placement %}{% render 'shortcode-render' render:'placement' default:'left' %}{% endcapture %}
{% capture text %}{% render 'shortcode-render' render:'text' default:'' %}{% endcapture %}
{% capture title %}{% render 'shortcode-render' render:'title' default:'' %}{% endcapture %}
{% capture class %}{% render 'shortcode-render' render:'class' default:'btn btn-default' %}{% endcapture %}
{% capture id %}{% render 'shortcode-render' render:'id' default:'' %}{% endcapture %}
{% capture url %}{% render 'shortcode-render' render:'url' default:'' %}{% endcapture %}
{% capture isOpen %}{% render 'shortcode-render' render:'isOpen' default:'' %}{% endcapture %}

{% if url != blank %}
<a href="{{url}}" {% if isOpen != blank %} target="_blank"{% endif %}>
  {% endif %}

  {% if type == 'button' %}
  <button type="button" class="{{class}}" data-toggle="tooltip" data-placement="{{placement}}" title="{{title}}" {% if id != blank %}id="{{id}}"{% endif %}>{{text}}</button>

  {% else %}
  <span class="{{class}}" data-toggle="tooltip" data-placement="{{placement}}" title="{{title}}" {% if id != blank %}id="{{id}}"{% endif %}>{{text}}</span>
  {% endif %}

  {% if url != blank %}
</a>
{% endif %}