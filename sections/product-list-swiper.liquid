<!-- product-list-swiper.liquid -->
<style>
    {%- if section.settings.nowrap -%}
    .productswiper .swiper-container {
        overflow: visible;
    }
    {%- endif -%}
    .productlist-swiper .product-card{
        margin-bottom: 0;
    }
    @media (max-width:750px){
      .productswiper .swiper-container {
          overflow: visible;
      }
      .productswiper .container-p{
        padding-right: 80px;
      }
    }
    
</style>
<div class="customstyle{{ section.id }} productswiper" data-aos="{{section.settings.animation}}">
    {%- include 'style-section' -%}
  <div >
    <div class="section-block">
      <div class="{{ section.settings.setwidth }}">
        {%- include 'section-heading' -%}
      </div>
      <div class="{{ section.settings.setwidth }} container-p">
      <div class="productlist-wrapper dots-negative" data-aos="{{section.settings.animation}}">
        <div class="productlist-swiper swiper-container swipercol-{{section.id}} {% if section.settings.scrollbar %} pb-5 {% endif %}" id="Productlist-{{ section.id }}"
          data-section-id="{{ section.id }}"  
          data-section-type="swipercollection"
          data-perview-desktop="{{section.settings.perviewDesktop}}"
          data-space-between="{{section.settings.spaceBetween}}"
          >
          <div class="swiper-wrapper">
            {%- assign collection = collections[section.settings.collection]  -%}
            {%- assign limit = section.settings.limit -%}
            {%- if collection != blank -%}
            {%- for product in collection.products limit: limit -%}
            <div class="productlist-item swiper-slide">
                {%- include 'product-card', product: product -%}
            </div>
            {%- endfor -%}
            {%- else -%}
            {%- for i in (1..limit) -%}
            <div class="productlist-item swiper-slide">
                {%- include 'product-grid-blank' -%}
            </div>
            {%- endfor -%}
            {%- endif -%}
            </div>
            {%- if section.settings.arrows -%}
            <div class="swiper-button-prev"></div>
            <div class="swiper-button-next"></div>
            {%- endif -%}
            {%- if section.settings.scrollbar -%}
            <div class="swiper-scrollbar"></div>
            {%- endif -%}
        </div>
      </div>
    </div>
    </div>
  </div>
  </div>
  
